<section class="loginPage">

  <form
    action="/edit-user/{{userExist._id}}"
    method="post"
    {{!-- enctype="multipart/form-data" --}}
  >
    <div class="wrapper">
      <h1>Update User</h1>
      <div class="inputBlockContainer">
        <label for="name">Name</label>
        <input type="text" name="name" value="{{userExist.name}}" disabled/>
      
        
      </div>
    
      <div class="inputBlockContainer">
        <label for="name">Email</label>
        <input type="text" name="name" value="{{userExist.email}}" disabled />
       
        
      </div>
      <div class="inputBlockContainer">
        <label for="phone">Phone</label>
        <input type="tel" name="phone" value="{{userExist.phone}}" disabled/>
       
      </div>

      <div class="inputBlockContainer">
        <label for="role">Role</label>
        <select name="role">
          <option value=""></option>
          <option value="admin">Admin</option>
          <option value="user">User</option>

        </select>
      </div>
      <div class="remember-forgot">
        <label><input type="checkbox">Remember me</label>
             
      </div>
      <button>Update</button>
     
      
    </div>
  </form>
</section>